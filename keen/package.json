{
  "name": "keen-platform",
  "version": "2.0.0",
  "description": "Production-grade autonomous development platform with API Gateway, database layer, and Anthropic Claude integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "keen": "./bin/keen.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/api/server.js",
    "dev": "tsx watch src/api/server.ts",
    "dev:db": "tsx watch src/index.ts",
    "dev:cli": "npm run build && node bin/keen.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "echo 'Integration tests require PostgreSQL. Use test:integration:db when database is available.'",
    "test:integration:db": "jest --config jest.integration.config.js",
    "test:security": "echo 'Security tests require PostgreSQL. Use test:security:db when database is available.'",
    "test:security:db": "jest --testPathPattern=tests/security --config jest.integration.config.js",
    "test:performance": "echo 'Performance tests require PostgreSQL. Use test:performance:db when database is available.'",
    "test:performance:db": "jest --testPathPattern=tests/performance --config jest.integration.config.js",
    "test:api": "jest --testPathPattern=tests/api",
    "test:cli": "npm run build && node bin/keen.js --help",
    "test:phase1": "jest --config jest.phase1.config.cjs",
    "db:migrate": "node dist/database/migrations/run.js",
    "db:seed": "node dist/database/seeds/run.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "validate": "npm run build && npm test",
    "validate:cli": "npm run build && npm run test:cli",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "link": "npm link",
    "unlink": "npm unlink -g keen-platform"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-slow-down": "^1.3.5",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.8.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "api-gateway",
    "database",
    "postgresql",
    "multi-tenant",
    "autonomous",
    "development",
    "anthropic",
    "claude",
    "1m-context",
    "express",
    "websocket",
    "jwt",
    "rate-limiting",
    "cli",
    "agent",
    "automation"
  ]
}
